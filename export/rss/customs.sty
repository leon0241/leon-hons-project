\newcommand*{\prightarrow}[1]{\xrightarrow{\mathmakebox[12pt]{#1}}}
\newcommand*{\pRightarrow}[1]{\xRightarrow{\mathmakebox[12pt]{#1}}}

\def\textrule#1{
    \parbox\textwidth{\hrulefill\hspace{0.5em}\lower.3ex\hbox{#1}\hspace{0.5em}\hrulefill}\vspace{-2ex}
    \newline
}

\newcommand\longrule[1]{
    \vspace{-3pt}
    \noindent\rule{\textwidth}{#1}\vspace{-8pt}
}
